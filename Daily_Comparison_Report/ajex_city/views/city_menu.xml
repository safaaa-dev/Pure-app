<odoo>
    <data>
        <record id="action_city" model="ir.actions.act_window">
            <field name="name">Cities</field>
            <field name="res_model">ajex.city</field>
            <field name="view_mode">tree,form</field>
        </record>
	<record id="action_neighborhood" model="ir.actions.act_window">
            <field name="name">Neighborhoods</field>
            <field name="res_model">ajex.neighborhood</field>
            <field name="view_mode">tree,form</field>
        </record>

	<menuitem id="root_menu" name="ajex" sequence="1"/>

         <menuitem id="reg_menu_1"
                   name="Cities"
                   parent="root_menu"
		   action="action_city" 
                   sequence="1"/>

          <menuitem id="reg_menu_2" name="neighborhoods" action="action_neighborhood" parent="root_menu" sequence="2"/>

        
    </data>
</odoo>
